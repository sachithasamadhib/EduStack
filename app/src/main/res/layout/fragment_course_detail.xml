<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="40dp"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <TextView
        android:id="@+id/courseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Course Title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- First row -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialsButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Materials"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_materials"
        app:iconGravity="top"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toTopOf="@id/attendanceButton"
        app:layout_constraintEnd_toStartOf="@id/assignmentsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/assignmentsButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Assignments"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_assignments"
        app:iconGravity="top"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toTopOf="@id/resultsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/materialsButton"
        app:layout_constraintTop_toBottomOf="@id/courseTitle" />

    <!-- Second row -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/attendanceButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Attendance"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_attendance"
        app:iconGravity="top"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/resultsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialsButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resultsButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Results"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_results"
        app:iconGravity="top"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/attendanceButton"
        app:layout_constraintTop_toBottomOf="@id/assignmentsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
